ldap:
    image: osixia/openldap:latest
    container_name: ldap
    environment:
      LDAP_ORGANISATION: "My Organization"
      LDAP_DOMAIN: "example.com" #cn=admin,dc=example,dc=com
      LDAP_ADMIN_PASSWORD: "adminpassword"
    ports:
      
"389:389" # Port pour LDAP
"636:636" # Port pour LDAP sécurisé (LDAPS)
volumes:
ldapData:/var/lib/ldap
ldapConfig:/etc/ldap/slapd.d
networks:
mynetwork
ldap_admin:
  image: osixia/phpldapadmin:latest
  container_name: phpldapadmin
  environment:
    PHPLDAPADMIN_LDAP_HOSTS: ldap
    PHPLDAPADMIN_HTTPS: "false"
  ports:
"8082:80" # Port pour l'interface graphique
networks:
mynetwork
volumes:
  mysql_data:
  dbData:
  ldapData:
  ldapConfig:

networks:
  mynetwork:
    driver: bridge
